{{#uxs-form-control-row as |row|}}

  {{#uxs-form-dropdown
    searchEnabled=false
    selected=(find-option-by quarterOptions "value" quarter)
    options=quarterOptions
    onchange=(action "setQuarter")
    name="quarter"
    placeholder="Quarter"
    class="fg"
    as |quarterOption|
  }}
    {{quarterOption.label}}
  {{/uxs-form-dropdown}}

  {{#uxs-form-dropdown
    searchEnabled=false
    selected=year
    options=yearOptions
    onchange=(action "setYear")
    name="year"
    placeholder="Year"
    class="fg"
    as |yearOption|
  }}
    {{yearOption}}
  {{/uxs-form-dropdown}}

{{/uxs-form-control-row}}
