{{#uxs-form-control-row name="range-month" as |row|}}

  {{#uxs-form-dropdown
    searchEnabled=false
    selected=(find-option-by monthOptions "value" month)
    options=monthOptions
    onchange=(action "setMonth")
    name="month"
    placeholder="Month"
    class="fg"
    as |monthOption|
  }}
    {{monthOption.label}}
  {{/uxs-form-dropdown}}

  {{#uxs-form-dropdown
    searchEnabled=false
    selected=year
    options=yearOptions
    onchange=(action "setYear")
    name="year"
    placeholder="Year"
    class="fg"
    as |yearOption|
  }}
    {{yearOption}}
  {{/uxs-form-dropdown}}

{{/uxs-form-control-row}}
